# Application
ENVIRONMENT=development
APP_NAME="Awareness Training Platform"
APP_VERSION=1.0.0
DEBUG=false

# Database
DATABASE_USER=postgres
DATABASE_PASSWORD=postgres
DATABASE_NAME=awareness_platform
DATABASE_HOST=db
DATABASE_PORT=5432
DATABASE_URL=postgresql://${DATABASE_USER}:${DATABASE_PASSWORD}@${DATABASE_HOST}:${DATABASE_PORT}/${DATABASE_NAME}

# Redis
REDIS_URL=redis://redis:6379/0

# Security
SECRET_KEY=your-secret-key-here-change-in-production
JWT_SECRET_KEY=${SECRET_KEY}
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# Frontend
FRONTEND_URL=http://localhost:3000
VITE_API_URL=http://localhost:8000

# Email
MAIL_FROM=noreply@awareness-platform.com
MAIL_FROM_NAME=Awareness Platform
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
SMTP_TLS=true
SMTP_SSL=false

# Stripe
STRIPE_SECRET_KEY=
STRIPE_PUBLISHABLE_KEY=
STRIPE_WEBHOOK_SECRET=

# OpenAI
OPENAI_API_KEY=

# Workers
WORKERS=4
LOG_LEVEL=info

# CORS
CORS_ORIGINS=["http://localhost:3000", "http://localhost:8000"]
CORS_ALLOW_CREDENTIALS=true
CORS_ALLOW_METHODS=["GET", "POST", "PUT", "DELETE", "OPTIONS", "PATCH"]
CORS_ALLOW_HEADERS=["*"]

# File Upload
MAX_UPLOAD_SIZE=10485760
ALLOWED_UPLOAD_EXTENSIONS=[".pdf", ".doc", ".docx", ".mp4", ".webm", ".png", ".jpg", ".jpeg"]

# Session
SESSION_SECRET_KEY=${SECRET_KEY}
SESSION_MAX_AGE=86400

# Monitoring (optional)
SENTRY_DSN=
PROMETHEUS_ENABLED=true